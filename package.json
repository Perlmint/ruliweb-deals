{
  "name": "ruliweb_deals",
  "version": "1.0.0",
  "description": "@ruliweb_deals",
  "main": "./src/app.js",
  "scripts": {
    "build": "webpack",
    "start": "pm2 start ./app.json",
    "stop": "pm2 stop ./app.json",
    "test": "jest --no-cache --verbose",
    "test:coverage": "jest --coverage --no-cache",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sapphiredev/ruliweb_deals.git"
  },
  "author": "sapphire",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sapphiredev/ruliweb_deals/issues"
  },
  "homepage": "https://github.com/sapphiredev/ruliweb_deals#readme",
  "dependencies": {
    "cheerio": "^1.0.0-rc.2",
    "knex": "^0.15.2",
    "request": "^2.88.0",
    "sqlite3": "^4.0.2",
    "twit": "^2.2.11"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/twit": "^2.2.20",
    "@types/webpack": "^4.4.17",
    "coveralls": "^3.0.2",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.3.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "testMatch": [
      "**/?(*.)test.ts?(x)"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/configs",
      "/scripts"
    ]
  }
}
